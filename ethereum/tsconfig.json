{
  "compilerOptions": {
    "baseUrl": ".",
    "esModuleInterop": true,
    "outDir": "./lib",
    "rootDir": "./test",
    "target": "esnext",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "incremental": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve"
  },
  "include": [
    "test/**/*.spec.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
